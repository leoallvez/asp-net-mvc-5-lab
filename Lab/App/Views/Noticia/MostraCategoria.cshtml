@model List<App.Models.Noticia>
@{
    ViewBag.Title = "MostraCategoria";
}

<h2>Mostra Categoria @ViewBag.Categoria </h2>

<div>
    <ul>
        @foreach (var item in Model)
        {
            <li>
                @Html.ActionLink(item.Titulo, "MostraNoticia", new { @id = item.Id }, null)
                <em>@Html.DisplayFor(m => item.Categoria)</em>
                <em><b>@Html.DisplayFor(m => item.Data)</b></em>
            </li>
        }
    </ul>
</div>

